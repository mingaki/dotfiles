[color]
ui = true

[core]
	excludesfile = ~/.gitignore_global
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true    # use n and N to move between diff sections
	light = true
  side-by-side = false
  line-numbers = true
  syntax-theme = dawnfox
  plus-style  = syntax "#d5f0d5"

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default
